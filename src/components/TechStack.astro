---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import Next from "./icons/next";
import Express from "./icons/express";
import Prisma from "./icons/prisma";
const icons = [
    "/src/assets/icons/html.svg",
    "/src/assets/icons/css.svg",
    "/src/assets/icons/tailwind-css.svg",
    "/src/assets/icons/js.svg",
    "/src/assets/icons/typescript.svg",
    "/src/assets/icons/react.svg",
    "/src/assets/icons/redux.svg",
    "/src/assets/icons/node-js.svg",
    "/src/assets/icons/bun.svg",
    "/src/assets/icons/mongodb.svg",
    "/src/assets/icons/postgresql.svg",
    "/src/assets/icons/drizzle.svg",
    "/src/assets/icons/python.svg",
    "/src/assets/icons/npm.svg",
    "/src/assets/icons/git.svg"
];
---

<Section id="about">
    <div class="pb-4 relative">
        <h2 class="text-center text-2xl text-heading font-bold">Tech Stack</h2>
        <span class="absolute w-20 h-2 left-1/2 bottom-0 -translate-x-1/2 bg-blue-500" role="presentation" />
    </div>
    <div
        class="max-w-2xl mt-6 mx-auto flex justify-center items-center flex-wrap gap-x-2 gap-y-4 md:gap-x-4 md:gap-y-6 lg:gap-x-8 lg:gap-y-10 lg:max-w-5xl">
        {
            icons.map((icon, idx) => (
                <Image src={icon} alt="Tech Stack Logo" width={100} height={100}
                       class=`size-14 md:size-18 lg:size-20 dark:fill-white ${idx < 9 ? "order-1" : "order-3"}` />
            ))
        }
        <Express />
        <Next />
        <Prisma/>
    </div>
</Section>
